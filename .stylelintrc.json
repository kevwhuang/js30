{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-sass-guidelines"
    ],
    "overrides": [
        {
            "files": [
                "**/*.html"
            ],
            "customSyntax": "postcss-html"
        }
    ],
    "rules": {
        "color-function-notation": "legacy",
        "color-named": null,
        "function-url-quotes": "never",
        "rule-empty-line-before": null,
        "selector-max-id": null
    }
}